---
import WebglDemo from "@/components/webgl-demo.astro"
import glSrc from "./render?raw"
import indexVert from "./index.vert?raw"
import indexFrag from "./index.frag?raw"
import filterVert from "./filter.vert?raw"
import filterFrag from "./filter.frag?raw"

const shaders = [
  {
    vert: { title: "index.vert", src: indexVert },
    frag: { title: "index.frag", src: indexFrag }
  },
  {
    vert: { title: "filter.vert", src: filterVert },
    frag: { title: "filter.frag", src: filterFrag }
  }
]
---

<WebglDemo canvasSize={"full-square"} glSrc={glSrc} shaders={shaders} />

<script>
  import { onload } from "./render"
  window.onload = onload
</script>
