---
import WebglDemo from "@/components/webgl-demo.astro"
import glSrc from "./render?raw"
import vertIn from "./in.vert?raw"
import fragIn from "./in.frag?raw"
import vertOut from "./out.vert?raw"
import fragOut from "./out.frag?raw"

const shaders = [
  {
    vert: { title: "out.vert", src: vertOut },
    frag: { title: "out.frag", src: fragOut }
  },
  {
    vert: { title: "in.vert", src: vertIn },
    frag: { title: "in.frag", src: fragIn }
  }
]
---

<WebglDemo canvasSize={"full-screen"} glSrc={glSrc} shaders={shaders} />

<script>
  import { onload } from "./render"
  window.onload = onload
</script>
