<canvas id="gl-canvas" width="300" height="300"></canvas>

<script>
  import { Space } from "@/lib/canvas/index"
  import { Program, Attribute, Uniform } from "@/lib/webgl/program"
  import vertexSource from "./index.vert?raw"
  import fragmentSource from "./index.frag?raw"
  import { Scene } from "@/lib/webgl/scene"
  import { Clock } from "@/lib/event/clock"
  import { Camera } from "@/lib/webgl/camera"

  window.onload = () => {
    const space = new Space("gl-canvas")
    const canvas = space.canvas()
    const gl = space.gl2()
    if (!canvas || !gl) return

    let scene: Scene
    let clock: Clock
    let camera: Camera

    const configure = () => {
      space.setSize(300, 300)
      // canvasを初期化する色を設定する
      gl.clearColor(0.0, 0.0, 0.0, 1.0)
      // canvasを初期化する際の深度を設定する
      gl.clearDepth(1.0)

      const program = new Program(gl, vertexSource, fragmentSource)

      const attributes: Attribute[] = ["aVertexPosition"]
      const uniforms: Uniform[] = ["uModelViewMatrix", "uProjectionMatrix"]

      program.load(attributes, uniforms)

      scene = new Scene(gl, program)
      clock = new Clock()

      camera = new Camera()
      camera.position = [0.0, 1.0, 3.0]
      camera.update()

      console.log("configuring successfully")
    }

    const draw = () => {
      // canvasを初期化
      gl.viewport(0, 0, gl.canvas.width, gl.canvas.height)
      gl.clear(gl.COLOR_BUFFER_BIT | gl.DEPTH_BUFFER_BIT)
    }

    const init = () => {
      configure()
      clock.on("tick", draw)
    }

    init()
  }
</script>
